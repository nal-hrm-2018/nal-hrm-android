<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_notifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_padding"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="@dimen/line_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pastel"
                    android:padding="@dimen/text_padding"
                    android:text="@string/dashboard_notifications"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/rv_notification_dashboard_height"
                    android:padding="@dimen/text_padding"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tvDashBoardNotification_ShowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/text_padding"
                    android:textColor="#1758e4"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDashBoardNotification_HideLess"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/text_padding"
                    android:textColor="#1758e4"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvDashBoardNotification_nothing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/fra_list_emp_nothingToShow"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/item_padding"
                    android:layout_marginStart="@dimen/text_padding"
                    android:layout_weight="1"
                    android:background="@drawable/border_background"
                    android:orientation="vertical"
                    android:padding="@dimen/line_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_pastel">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="@string/dashboard_absences"
                            android:textColor="@android:color/black" />

                        <ImageButton
                            android:id="@+id/btn_addAbsence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="@dimen/text_padding"
                            android:background="@drawable/shape_button_round"
                            android:src="@drawable/ic_add"
                            android:tint="@color/color_white" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/text_padding"
                        android:text="@string/absence_total_remaining" />

                    <TextView


                        android:id="@+id/tv_totalRemainingAbsence"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:textAlignment="center"
                        android:textColor="@color/color_violet_2"
                        android:textSize="@dimen/avatar_size_small" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/item_padding"
                    android:layout_marginRight="@dimen/text_padding"
                    android:layout_weight="1"
                    android:background="@drawable/border_background"
                    android:orientation="vertical"
                    android:padding="@dimen/line_border"
                    android:paddingBottom="@dimen/activity_horizontal_margin">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/color_pastel">

                        <TextView
                            android:id="@+id/title_absence"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/text_padding"
                            android:text="@string/dashboard_overtime"
                            android:textColor="@android:color/black" />

                        <ImageButton
                            android:id="@+id/btn_addOvertime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_margin="@dimen/text_padding"
                            android:background="@drawable/shape_button_round"
                            android:src="@drawable/ic_add"
                            android:tint="@color/color_white" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingBottom="@dimen/activity_horizontal_margin">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_violet"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_normalOvertime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/text_padding"
                                    android:paddingRight="@dimen/text_padding"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/overtime_label_hours"
                                    android:textColor="@color/color_white" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/text_padding"
                                    android:text="@string/text_overtime_normal_day"
                                    android:textColor="@color/color_white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_violet_1"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_weekendOvertime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/text_padding"
                                    android:paddingRight="@dimen/text_padding"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/overtime_label_hours"
                                    android:textColor="@color/color_white" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/text_padding"
                                    android:text="@string/text_overtime_weekend"
                                    android:textColor="@color/color_white" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/color_violet_2"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_holidayOvertime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/text_padding"
                                    android:paddingRight="@dimen/text_padding"
                                    android:textColor="@color/color_white"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/overtime_label_hours"
                                    android:textColor="@color/color_white" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/text_padding"
                                    android:text="@string/text_overtime_holiday"
                                    android:textColor="@color/color_white" />
                            </LinearLayout>
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_generalInformation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/text_padding"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="@dimen/line_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pastel"
                    android:padding="@dimen/text_padding"
                    android:text="@string/dashboard_general_information"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/piechart1"
                        android:layout_width="0dp"
                        android:layout_height="200dp"

                        android:layout_marginBottom="@dimen/activity_horizontal_margin"
                        android:layout_marginTop="@dimen/activity_horizontal_margin"
                        android:layout_weight="2"
                        android:paddingBottom="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_horizontal_margin" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_horizontal_line"
                    android:background="@color/color_gray" />

                <TextView
                    android:id="@+id/tv_titleEventInmonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pastel"
                    android:padding="@dimen/text_padding"
                    android:text="@string/dashboard_event_in_month"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_violet_2"
                            android:orientation="horizontal"
                            android:padding="@dimen/text_padding">

                            <TextView
                                android:id="@+id/tv_newEmployees"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingLeft="@dimen/text_padding"
                                android:paddingRight="@dimen/text_padding"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/number_size_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_newEmployees"
                                android:layout_weight="5"
                                android:paddingLeft="@dimen/text_padding"
                                android:text="@string/dashboard_newEmployee"
                                android:textColor="@color/color_white" />

                            <ImageView
                                android:layout_width="@dimen/size_image_icon"
                                android:layout_height="@dimen/size_image_icon"
                                android:layout_alignBottom="@+id/tv_newEmployees"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/dashboard_new_employees_description"
                                android:src="@drawable/ic_new_employees"
                                android:tint="@color/color_white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_violet_1"
                            android:orientation="horizontal"
                            android:padding="@dimen/text_padding">

                            <TextView
                                android:id="@+id/tv_birthdays"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingLeft="@dimen/text_padding"
                                android:paddingRight="@dimen/text_padding"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/number_size_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_birthdays"
                                android:layout_weight="5"
                                android:paddingLeft="@dimen/text_padding"
                                android:text="@string/dashboard_birthdays"
                                android:textColor="@color/color_white" />

                            <ImageView
                                android:layout_width="@dimen/size_image_icon"
                                android:layout_height="@dimen/size_image_icon"
                                android:layout_alignBottom="@+id/tv_birthdays"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/dashboard_birthdays_description"
                                android:src="@drawable/ic_birthday"
                                android:tint="@color/color_white" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/color_violet"
                            android:orientation="horizontal"
                            android:padding="@dimen/text_padding">

                            <TextView
                                android:id="@+id/tv_employeesQuit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:paddingLeft="@dimen/text_padding"
                                android:paddingRight="@dimen/text_padding"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/number_size_medium" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_employeesQuit"
                                android:layout_weight="5"
                                android:paddingLeft="@dimen/text_padding"
                                android:text="@string/dashboard_employees_quit"
                                android:textColor="@color/color_white" />

                            <ImageView
                                android:layout_width="@dimen/size_image_icon"
                                android:layout_height="@dimen/size_image_icon"
                                android:layout_alignBottom="@+id/tv_employeesQuit"
                                android:layout_alignParentEnd="true"
                                android:contentDescription="@string/dashboard_employees_quit_description"
                                android:src="@drawable/ic_quit_process"
                                android:tint="@color/color_white" />
                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_horizontal_line"
                    android:background="@color/color_gray" />

                <TextView
                    android:id="@+id/tv_titleExpiringContractsInmonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pastel"
                    android:padding="@dimen/text_padding"
                    android:text="@string/dashboard_expiring_contracts_in_month"
                    android:textAllCaps="true"
                    android:textColor="@android:color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/activity_horizontal_margin">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="@dimen/size_circle_bullet"
                            android:layout_height="@dimen/size_circle_bullet"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/red_circle" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="@dimen/text_padding"
                            android:text="@string/dashboard_internship" />

                        <TextView
                            android:id="@+id/tv_internship"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="@dimen/text_padding"
                            android:text="1"
                            android:textColor="@android:color/black" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="@dimen/size_circle_bullet"
                            android:layout_height="@dimen/size_circle_bullet"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/orange_circle" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="@dimen/text_padding"
                            android:text="@string/dashboard_probation" />

                        <TextView
                            android:id="@+id/tv_probation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="@dimen/text_padding"
                            android:text="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="@dimen/size_circle_bullet"
                            android:layout_height="@dimen/size_circle_bullet"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/blue_circle" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="@dimen/text_padding"
                            android:text="@string/dashboard_one_year" />

                        <TextView
                            android:id="@+id/tv_one_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="@dimen/text_padding"
                            android:text="1"
                            android:textColor="@android:color/black" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="10">

                        <ImageView
                            android:layout_width="@dimen/size_circle_bullet"
                            android:layout_height="@dimen/size_circle_bullet"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/activity_horizontal_margin"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:background="@drawable/violet_circle" />


                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:padding="@dimen/text_padding"
                            android:text="@string/dashboard_three_year" />

                        <TextView
                            android:id="@+id/tv_three_year"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:padding="@dimen/text_padding"
                            android:text="1"
                            android:textColor="@android:color/black"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_joingProjects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/text_padding"
                android:layout_marginRight="@dimen/text_padding"
                android:layout_marginTop="@dimen/text_padding"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="@dimen/line_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pastel"
                    android:padding="@dimen/text_padding"
                    android:text="@string/dashboard_joining_projects"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_joiningProjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/activity_horizontal_margin" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_projects"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/text_padding"
                android:background="@drawable/border_background"
                android:orientation="vertical"
                android:padding="@dimen/line_border">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/color_pastel"
                    android:padding="@dimen/text_padding"
                    android:text="@string/dashboard_projects_company"
                    android:textColor="@android:color/black" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_projects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>