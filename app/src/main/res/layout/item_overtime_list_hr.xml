<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_padding"
    android:background="@android:color/white"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvItemOvertimeListHR_NameEmp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvItemOvertimeListHR_Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@color/color_violet"
            android:paddingLeft="@dimen/text_padding"
            android:paddingRight="@dimen/text_padding"
            android:text="@string/overtime_typeDate"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="12">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="vertical"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/text_space_item_absence"
                    android:layout_height="wrap_content"
                    android:text="Project" />

                <TextView
                    android:id="@+id/tvItemOvertimeListHR_NameProject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/textview.nameProjectEmployee" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/text_space_item_absence"
                    android:layout_height="wrap_content"
                    android:text="@string/text_date" />

                <TextView
                    android:id="@+id/tvItemOvertimeListHR_Date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/text_space_item_absence"
                    android:layout_height="wrap_content"
                    android:text="@string/absence_item_type_time" />

                <TextView
                    android:id="@+id/tvItemOvertimeListHR_FromTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/text_hour" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview.text.symbol" />

                <TextView
                    android:id="@+id/tvItemOvertimeListHR_ToTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="@string/text_hour" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/text_space_item_absence"
                    android:layout_height="wrap_content"
                    android:text="@string/absence_item_reason" />

                <TextView
                    android:id="@+id/tvItemOvertimeListHR_Reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_padding"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:weightSum="2">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/numberTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_padding"
                        android:text="@string/overtime_numberTime" />

                    <TextView
                        android:id="@+id/tvHr_NumberTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/numberTime"
                        android:background="@color/color_green"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/tvHr_NumberTime"
                        android:layout_toEndOf="@id/tvHr_NumberTime"
                        android:background="@color/color_green"
                        android:paddingEnd="@dimen/text_padding"
                        android:text="@string/overtime_label_hours"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_acceptTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/acceptTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_padding"
                        android:text="@string/overtime_numberAcceptTime" />

                    <TextView
                        android:id="@+id/tvHr_AcceptTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/acceptTime"
                        android:background="@color/color_orange"
                        android:paddingLeft="@dimen/text_padding"
                        android:paddingRight="@dimen/text_padding"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/tvHr_AcceptTime"
                        android:layout_toEndOf="@+id/tvHr_AcceptTime"
                        android:background="@color/color_orange"
                        android:paddingEnd="@dimen/text_padding"
                        android:text="@string/overtime_label_hours"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:paddingRight="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/tvItemOvertimeListHR_Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@color/color_gray"
                android:paddingLeft="@dimen/text_padding"
                android:paddingRight="@dimen/text_padding"
                android:text="@string/status"
                android:textStyle="bold"
                android:textColor="@android:color/black" />
            <LinearLayout
                android:id="@+id/ll_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/activity_horizontal_margin">

                <ImageButton
                    android:id="@+id/imbItemListOTOfHr_Accept"
                    android:layout_width="@dimen/icon_size_button"
                    android:layout_height="@dimen/icon_size_button"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/text_padding"
                    android:background="@drawable/ic_accept"
                    android:tint="@color/color_green" />

                <ImageButton
                    android:id="@+id/imbItemListOTOfPO_Reject"
                    android:layout_width="@dimen/icon_size_button"
                    android:layout_height="@dimen/icon_size_button"
                    android:layout_marginLeft="@dimen/text_padding"
                    android:background="@drawable/ic_cancel"
                    android:tint="@color/color_green" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_reasonReject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/item_padding">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/overtime_item_reason_reject" />

        <TextView
            android:id="@+id/tvHr_ReasonReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/text_padding" />
    </LinearLayout>

</LinearLayout>