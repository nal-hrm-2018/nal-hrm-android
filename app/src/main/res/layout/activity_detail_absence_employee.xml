<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutDetailAbsenceEmpAct_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:orientation="vertical"
                android:paddingBottom="@dimen/text_padding">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Total"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Remain"
                        android:gravity="center"
                        android:textColor="@color/color_white"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/tvDetailAbsenceEmpAct_Total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="12"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_big" />

                    <TextView
                        android:id="@+id/tvDetailAbsenceEmpAct_Remain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="8"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/text_size_big" />
                </LinearLayout>

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/text_padding"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin">

                            <TextView
                                android:id="@+id/tv_annualTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Annual"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvDetailAbsenceEmpAct_Annual"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_annualTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center"
                                android:text="4"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin">


                            <TextView
                                android:id="@+id/tv_nosalaryTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No salary"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvDetailAbsenceEmpAct_NoSalary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_nosalaryTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin">

                            <TextView
                                android:id="@+id/tv_maternityTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Maternity"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvDetailAbsenceEmpAct_Maternity"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_maternityTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin">

                            <TextView
                                android:id="@+id/tv_marriageTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Marriage"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvDetailAbsenceEmpAct_Marriage"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_marriageTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_medium" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin">

                            <TextView
                                android:id="@+id/tv_bereavementTitle"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bereavement"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_small" />

                            <TextView
                                android:id="@+id/tvDetailAbsenceEmpAct_Bereave"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_bereavementTitle"
                                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                                android:gravity="center"
                                android:text="0"
                                android:textColor="@color/color_white"
                                android:textSize="@dimen/text_size_medium" />
                        </RelativeLayout>
                    </LinearLayout>
                </HorizontalScrollView>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_absence"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_gray" />

            <TextView
                android:id="@+id/tv_message_nothing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="center"
                android:padding="@dimen/text_padding"
                android:textSize="@dimen/text_size_medium"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/prgAbsenceFrag_ShowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_absence"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
