<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".views.manage_absence.form_holiday">
    <android.support.v7.widget.Toolbar
        android:id="@+id/form_holiday_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/form_holiday_edt_tenNgayNghi"
                    android:hint="@string/form_holiday_edt_tenNgayNghi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </android.support.design.widget.TextInputLayout>
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/form_holiday_edt_ngayBatDau"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_holiday_edt_ngayBatDau"/>
                </android.support.design.widget.TextInputLayout>
                <ImageButton
                    android:id="@+id/form_holiday_imb_ngayBatDau"
                    android:layout_weight="1"
                    android:src="@drawable/ic_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout> <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/form_holiday_edt_ngayKetThuc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_holiday_edt_ngayKetThuc"/>
                </android.support.design.widget.TextInputLayout>
                <ImageButton
                    android:id="@+id/form_holiday_imb_ngayKetthuc"
                    android:layout_weight="1"
                    android:src="@drawable/ic_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/form_holiday_spinner_loaiNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Loại nghỉ"/>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/form_holiday_edt_ghiChu"
                    android:inputType="textMultiLine"
                    android:lines="6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/form_holiday_edt_ghiChu"/>
            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/form_holiday_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/form_absence_btn_submit"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>