<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/absences_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/text_padding"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin">
    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        android:hint="@string/absence_text_type"/>

    <TextView
        android:id="@+id/tv_thoigianNghi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Cả ngày"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:paddingLeft="@dimen/activity_vertical_margin"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/textview.dayStartProjectEmployee"
                    android:text="@string/textview.text.from"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_startAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/textview.dayStartProjectEmployee"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_endDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/textview.dayStartProjectEmployee"
                    android:text="@string/textview.text.to"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_endAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/textview.dayEndProjectEmployee"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:text="Lý do: "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/item_absence_tv_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lý do nghỉ"/>
    </LinearLayout>
</LinearLayout>