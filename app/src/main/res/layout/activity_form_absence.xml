<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.absence.Form_absence">
    <android.support.v7.widget.Toolbar
        android:id="@+id/form_absence_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_below="@+id/form_absence_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UnknownId">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/form_absence_edt_tuNgay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_absence_edt_tungay"
                        android:inputType="datetime"/>
                </android.support.design.widget.TextInputLayout>
                <ImageButton
                    android:id="@+id/form_absence_imb_tuNgay"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:weightSum="10"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputLayout
                    android:layout_weight="9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/form_absence_edt_denNgay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/form_absence_edt_denNgay"
                        android:inputType="datetime"/>
                </android.support.design.widget.TextInputLayout>
                <ImageButton
                    android:id="@+id/form_absence_imb_denNgay"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/form_absence_spinner_thoiGianNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/form_absence_spinner_thoiGianNghi"
                app:met_floatingLabel="normal" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/form_absence_spinner_loaiNghi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/form_absence_spinner_loaiNghi"
                app:met_floatingLabel="normal" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/form_absence_edt_lydo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:lines="5"
                    android:hint="@string/form_absence_edt_reason"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/form_absence_edt_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/form_absence_edt_note"
                    android:inputType="text"/>
            </android.support.design.widget.TextInputLayout>
            <CheckBox
                android:id="@+id/form_absence_cb_nghiBoSung"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/form_absence_cb_nghiBoSung"/>
            <Button
                android:id="@+id/form_absence_btn_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/form_absence_btn_submit"/>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>