<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.overtime.formOvertime.FormOvertimeActivity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layoutFormOvertimeAct_Project"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:padding="@dimen/text_padding">
            <TextView
                android:id="@+id/tvFormOvertimeAct_Project"
                android:text="@string/text_tv_project"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <Spinner
                android:id="@+id/spnFormOvertimeAct_Project"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:padding="@dimen/text_padding"
            >
            <TextView
                android:text="@string/text_tv_date"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/edtFormOvertimeAct_Date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:hint="@string/hint_format_date"
                android:inputType="date"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:typeface="monospace"
                app:keep_hint="true"
                mask:allowed_chars="1234567890"
                mask:mask="##-##-####" />

            <ImageButton
                android:id="@+id/imbFormOvertimeAct_Date"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/ic_date"
                android:contentDescription="@string/des_picker_date"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:padding="@dimen/text_padding">
            <TextView
                android:text="@string/text_tv_from_time"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/edtFormOvertimeAct_FromTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:hint="@string/hint_format_time"
                android:inputType="time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:typeface="monospace"
                app:keep_hint="true"
                mask:allowed_chars="1234567890"
                mask:mask="##:##" />

            <ImageButton
                android:id="@+id/imbFormOvertimeAct_FromTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/ic_time"
                android:contentDescription="@string/des_picker_time" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:padding="@dimen/text_padding">
            <TextView
                android:text="@string/text_tv_to_time"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/edtFormOvertimeAct_ToTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="7"
                android:hint="@string/hint_format_time"
                android:inputType="time"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:typeface="monospace"
                app:keep_hint="true"
                mask:allowed_chars="1234567890"
                mask:mask="##:##" />

            <ImageButton
                android:id="@+id/imbFormOvertimeAct_ToTime"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:src="@drawable/ic_time"
                android:contentDescription="@string/des_picker_time"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:padding="@dimen/text_padding">
            <TextView
                android:text="@string/text_tv_total_time"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFormOvertimeAct_TotalTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:inputType="numberDecimal"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:hint="@string/hint_actual_overtime"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:padding="@dimen/text_padding">
            <TextView
                android:text="@string/text_tv_reason"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/edtFormOvertimeAct_Reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size_medium"
                android:hint="@string/hint_input_value_here"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnFormOvertimeAct_Submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/activity_horizontal_margin"
            android:background="@drawable/shape_button_changepassword"
            android:text="@string/form_absence_btn_submit" />
    </LinearLayout>
</ScrollView>