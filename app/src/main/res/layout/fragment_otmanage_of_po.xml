<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_gray"
    tools:context="com.dal.hrm_management.views.manageOvertime.po.OTManageOfPOFragment">

    <RelativeLayout
        android:id="@+id/rl_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:padding="@dimen/text_padding">

        <Spinner
            android:id="@+id/spnProjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/text_padding" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvOTManagePOFra_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_layout"
        android:background="@color/color_gray"></android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/prgOTManagePOFra_showMore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/tvOTManagePOFra_Nothing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/fra_list_emp_nothingToShow"
        android:textAlignment="center"
        android:visibility="gone" />
</RelativeLayout>
